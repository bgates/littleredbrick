<div id="edit" class="editbox container">
 <%= form_for :post, :url => forum_topic_post_path(@discussable, @post.forum_id, @post.topic_id, @post, :q => params[:q], :all => params[:all], :page => params[:page]), :remote => true, :html => { :method => :put }, :before => "$('editbox_spinner').show();" do |f| -%>
  <table width="100%" border="0" cellpadding="0" cellspacing="0" class='beast'>
   <tbody>
    <tr>
      <td rowspan="2" class="post_edit_td">
        <%= f.text_area :body, :rows => 10, :id => "edit_post_body", :tabindex => 1 %>
      </td>
      <td valign="top" style="padding-right:10px">
        <h3><%= 'Formatting Options'[] %></h3>
        <ul class="help">
          <li><%= '*bold*'[:formatting_bold] %></li>
          <li><%= '_italics_'[:formatting_italics] %></li>
          <li>"IBM":http://www.ibm.com</li>
          <li><%= '* or # <span>(lists)</span>'[:formatting_list] %></li>
        </ul>
       <%= link_to "Formatting help", '/help/page/posts/edit' %>
      </td>
    </tr>
    <tr>
      <td valign="bottom" style="padding-bottom:15px;">
        <%= ajax_spinner_for "editbox", "indicator_16.gif" %>
        <%= submit_tag 'Save Changes'[], :class => 'button', :tabindex => 2 %>
      </td>
    </tr>
   </tbody>
    <tfoot>
    <tr>
     <td><%= link_to_function('cancel'[], "EditForm.cancel()") %></td>
     <td></td>
    </tr>
    </tfoot>

  </table>
   <% end -%>
   <%= button_to 'Delete Post', forum_topic_post_path(@discussable, @post.forum_id, @post.topic, @post, :page => params[:page], :q => params[:q], :all => params[:all]), :method => :delete, :class => 'button', :style => 'margin:0 15px 0 0' %><br/>
</div>
