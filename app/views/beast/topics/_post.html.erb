<tr class="post hentry" id="<%= post.dom_id %>">
  <td class="author vcard">
    <%= post_links(post) %>
    <div class="date">
      <abbr class="updated" title="<%= post.created_at.strftime("%b %d, %I:%M%p %Z") %>">
      Post added
      <% if post.created_at > Time.now.utc-24.hours%>
      <%= time_ago_in_words(post.created_at).sub(/about /, '') %> ago
      <% else %>
      <%= post.created_at.strftime("%b %d, %Y"[:date_format])%>
      <% end %>
      </abbr>
    </div>
    <% if current_user.moderator_of?(@forum) || 
          post.editable_by?(current_user) -%>
    <span class="edit">
      <%= ajax_spinner_for "edit-post-#{post.id}" %>
      <%= link_to "Edit Post"[], (edit_forum_topic_post_path(@discussable, post.forum_id, post.topic_id, post, :page => params[:page], :q => params[:q])) %>
    </span>
    <% end -%>
  </td>
  <td class="body entry-content" id="post-body-<%= post.id %>">
    <%= post.body_html.html_safe %>
  </td>
</tr>

