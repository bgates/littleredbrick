<tr class="hentry">
  <td style="padding:5px; width:16px;" class="c1">
    <%= recent_topic_activity_indicator(topic) %>
  </td>
  <td class="c2">
    <%= "Sticky"[:sticky_title]+": <strong>" if topic.sticky? %>
    <%= topic_title_link(topic, :class => "entry-title", :rel => "bookmark") %>
    <%= "</strong>" if topic.sticky? %>
    <% if topic.paged? -%>
    <small><%= link_to 'last'[],forum_topic_path(@discussable, @forum, topic, :page => topic.last_page) %></small>
    <% end -%>
  </td>
  <td class="ca inv stat"><%= topic.posts_count %></td>
  <td class="ca inv stat"><%= number_with_delimiter(topic.views) %></td>
  <td class="lp">
    <abbr class="updated" title="<%= topic.replied_at.strftime("%b %d, %I:%M%p %Z") %>"><%= time_ago_in_words(topic.replied_at) %></abbr> ago
    <%= 'by {user}'[:by_user, "<span class=\"author\"><strong class=\"fn\">#{h(topic.replied_by_user.display_name)}</strong></span>"].html_safe %>
    <span><%= link_to 'view'[],forum_topic_path(@discussable, @forum, topic, :page => topic.last_page, :anchor => "posts-#{topic.last_post_id}") %></span>
  </td>
</tr>
