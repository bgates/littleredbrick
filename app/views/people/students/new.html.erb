<div id="content">
<h1><%= @page_h1 = "New Student" -%></h1>
<%= error_messages_for("student") %>
<%= form_for @student, :url => students_path do |f| %>
<fieldset>
  <legend>Name</legend>
  <ul class='line'>
    <li><label for='student_first_name'>First</label><%= f.text_field 'first_name', {:size => 12} %></li>
    <li><label for='student_last_name'>Last</label><%= f.text_field 'last_name', {:size => 12} %></li>
    <li><label for="student_grade">Grade</label><%= select("student", "grade", (@school.low_grade..@school.high_grade)) %></li>
  </ul>
</fieldset>
<fieldset>
  <legend>Login</legend>
  <ul class='line'>
   <%= fields_for "student[authorization]", @student.authorization do |auth| %>
    <li><label for='student_authorization_login'>Login</label><%= auth.text_field 'login', {:size => 12} %></li>
    <li><label for='student_authorization_password' id='password_label'>Password</label><%= auth.password_field 'password', {:size => 12} %></li>
    <li><label for='student_authorization_password_confirmation'>Confirm Password</label><%= auth.password_field 'password_confirmation', {:size => 12} %></li>
   <% end %>
  </ul>
</fieldset>
<fieldset>
  <legend>Optional Information</legend>
  <ul class='line'>
    <li><label for='student_id_number'>ID</label><%= f.text_field 'id_number', {:size => 10} %></li>
    <li><label for="student_email">Email</label><%= f.text_field 'email', :size => 10 %></li>
  </ul>
  <%= submit_tag('Create Student', :class => 'button') %>
</fieldset>
<% end %>
<%= link_to "Back", students_path %>
</div>
<div id="secondary">
<h2>Note</h2>
<p>If you need to create accounts for multiple students, there are separate forms to <%= link_to('create accounts in bulk', enter_multiple_path('students')) %>.</p>
<%= initial %>
</div>
