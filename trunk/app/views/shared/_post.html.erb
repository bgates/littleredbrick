<div id="posts">
<h3>Recent Forum Comments</h3>
 <% if @posts.empty? %>
  <p><%= empty_posts %>.</p>
 <% else %>
 <table class='scrollike'>
  <thead>
   <tr>
    <th>Forum</th>
    <th>Topic</th>
    <%= author_header %>
    <th>Post</th>
    <th>Date</th>
   </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
   <tr class='odd'>
    <td class='text'><%= link_to truncate(post.forum_name, :length => 12), forum_path(@section, post.forum_id), {:title => post.forum_name} %></td>
    <td class='text'><%= link_to truncate(post.topic_title, :length => 12),forum_topic_path(@section, post.forum_id, post.topic_id, {:title => post.topic_title}) %></td>
    <%= author(post) %>
    <td class='text'><%= truncate(post.body_html.gsub(/<[a-zA-Z\/][^>]*>/,''), :length => 70, :separator => ' ') %></td>
    <td><%= post.date %></td>
   </tr>
  <% end %>
  </tbody>
</table>
<%= link_to_more_posts %>
<% end %>
</div>

