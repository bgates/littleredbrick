<div id="content">
<h1><%= @event.name %></h1>
<dl>
<dt>Date</dt>
<dd><%= @event.date %></dd>
<% unless @event.description.blank? %>
  <dt>Description</dt>
  <dd><%= @event.description %></dd>
<% end %>
</dl>
<p>This event is on the calendar of <%= @event.audience %>.</p>
<%= link_to "Edit", edit_event_path(@event), :class => 'remote' if @event.creator_id == current_user.id %>
<%= link_to "Back", calendar_path(:year => @event.year, :month => @event.month) %>
</div>
