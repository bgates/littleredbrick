<thead>
 <tr>
  <th id = "student_head" title='Click students&#8217; names to see more information on their performance in this section'>Student</th>
  <th colspan = '<%= [@assignments.length, 1].max %>' id = 'assign_head' <%= "title='click an assigment to edit'" unless @assignments.empty? %>><%= link_to "Assignments", section_assignments_path(@section) %></th>
  <th id="assignment_marker">
   <%= add_assignment_marker %>
  </th>
  <th colspan="2" id="averages">Average</th>
 </tr>
 <tr id = "header_bottom">
  <th>Name</th>
   <%= assignment_list_if_it_exists.html_safe %>
  <th id = 'new_assign_td' style='width:30%;'>
   <%= link_to ">", section_gradebook_path(@section, :start => @assignments.first.position + 1), :style => 'float:left', :title => 'next assignment' unless @assignments.last == @all_assignments.last %>
   &nbsp;
  </th>
  <%= assignment_range %>
  <th title='Marking Period <%= @marking_period.position if @marking_period %>Average'>M.P.<%= @marking_period.position if @marking_period %></th>
 </tr>
</thead>
